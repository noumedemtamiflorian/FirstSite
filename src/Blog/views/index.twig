{% extends '@blog/template/layout.twig' %}
{% block title "Mes Articles" %}
{% block body %}
    <h1>Bienvenue sur le blog</h1>
    <div class="row">
        {% for row in posts | batch(5) %}
            <div class="card-deck">
                {% for post in row %}
                    <div class="card my-2 mx-2">
                        <div class="card-header">
                            <h5><a href="{{ path('blog.show',{slug: post.slug , id: post.id }) }}">
                                    {{ post.name }}
                                </a></h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                {{ post.content | excerpt | nl2br }}
                            </p>
                            <p class="text-muted"> {{ post.created_at | ago  }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('blog.show',{slug: post.slug , id: post.id }) }}" class="btn btn-primary">Voir
                                l'article</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    {{ paginate(posts,'blog.index') }}
{% endblock %}