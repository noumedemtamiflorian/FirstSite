{{ csrf_input() }}
<div class="row">
    <div class="col-md-4">
        {{ flied('name',item.name,'Titre de l\'article') }}
    </div>
    <div class="col-md-4">
        {{ flied('slug',item.slug,'Slug') }}
    </div>
    <div class="col-md-4">
        {{ flied('published',item.published,'En ligne ?',{type: 'checkbox'}) }}
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        {% if item.image != null %}
            <img src="{{ item.thumb }}" style="width: 100%">
        {% endif %}
    </div>
    <div class="col-md-4">
        {{ flied('image',item.category_id,'image',{type: 'file' }) }}
    </div>
    <div class="col-md-4">
        {{ flied('category_id',item.category_id,'categorie',{options: categories}) }}
    </div>
</div>
{{ flied('content',item.content,'content',{type: 'textarea'}) }}
{{ flied('created_at',item.created_at,'Date de creation ') }}