{% extends '@admin/template/layout.twig' %}
{% block body %}
    {% if flash('Abscence_compte') %}
        <div class="alert text-center mt-3 alert-danger">
            {{ flash('Abscence_compte') }}
        </div>
    {% endif %}
    {% if flash('incorrect') %}
        <div class="alert text-center mt-3 alert-danger">
            {{ flash('incorrect') }}
        </div>
    {% endif %}
    <form action="{{ path('auth.login') }}" method="post">
        {{ csrf_input() }}
        {{ flied('username',null,'Nom de l\'utilisateur') }}
        {{ flied('password',null,'Mots de passe') }}
        <button class="btn btn-primary" type="submit">Se Connecter</button>
    </form>
{% endblock %}